{
  "name": "sorters",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:unit",
    "test:unit": "jest --testMatch '**/*.unit.test.js'",
    "test:e2e": "jest --testMatch '**/*.e2e.test.js' --runInBand",
    "dev": "node index.js",
    "clean": "del .next",
    "build": "next build",
    "start": "export NODE_ENV=prod && node index.js",
    "start:test": "export NODE_ENV=prod && export MONGO_URL=mongodb://localhost:27017/sorters_test && node --harmony-async-await index.js",
    "linked-modules": "find node_modules/ -maxdepth 1 -type l -ls | grep -o -E \"[^/]+$\"",
    "save-linked-modules": "npm run -s linked-modules > .linked_modules",
    "link-modules": "cat .linked_modules | xargs yarn link",
    "docker:build": "docker build -t sorters .",
    "docker:clean": "docker rm -f sorters || true",
    "docker:run": "docker run -p 7880:3000 -d --link sorters-mongo:mongo --name sorters sorters && npm run docker:logs",
    "docker:stop": "docker stop sorters",
    "docker:start": "docker start sorters && npm run docker:logs",
    "docker:logs": "docker logs -f sorters",
    "deploy": "npm run docker:build && npm run docker:clean && npm run docker:run"
  },
  "author": "Nicola Marcacci Rossi <nicolamr@gmail.com> (http://nmr.io)",
  "license": "ISC",
  "dependencies": {
    "apollo-cache-inmemory": "^1.1.4",
    "apollo-client": "^2.0.4",
    "compose-next": "^1.1.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.3",
    "country-list": "^1.1.0",
    "crypto-browserify": "^3.12.0",
    "express": "^4.16.2",
    "graphql-server-express": "^1.3.2",
    "graphql-tag": "^2.5.0",
    "graphql-tools": "^2.14.1",
    "mailcomposer": "^4.0.2",
    "mailgun-js": "^0.14.0",
    "markdown-it": "^8.4.0",
    "markdown-it-emoji": "^1.4.0",
    "mongodb": "^3.0.1",
    "next": "^4.2.1",
    "ooth": "1.1.0",
    "ooth-client": "^1.1.0",
    "ooth-client-react": "^1.1.0",
    "ooth-client-react-next": "^1.1.1",
    "ooth-client-react-next-apollo": "^1.1.1",
    "ooth-facebook": "^1.1.0",
    "ooth-google": "^1.1.0",
    "ooth-local": "^1.1.0",
    "ooth-mongo": "^1.1.0",
    "react": "^16.2.0",
    "react-apollo": "^2.0.4",
    "react-bootstrap": "^0.31.5",
    "react-dom": "^16.2.0",
    "react-gravatar": "^2.6.3",
    "react-responsive-embed": "^2.1.0",
    "react-sortable-hoc": "^0.6.8",
    "redux": "^3.7.2",
    "staart": "^1.0.0"
